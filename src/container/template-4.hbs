<header class="header ">
	<div class="">
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<main class="main">
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{descriotion}}</p>
		<div class="main_action">
			<a href="{{href}}" class="button main_button">{{button}}</a>
		</div>
	</div>
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
	<div class="card">
		<div class="card_image" style="background-image: url({{photo}})"></div>
		<h2 class="card_title">{{heading}}</h2>
		<p class="card_info">{{info}}</p>
		<a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
	</div>
	{{/each}}
</div>


<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<div class="actions_title">{{heading}}</div>
		<a href="{{url}}" class="actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>


<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<div class="footer_title">{{title}}</div>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>