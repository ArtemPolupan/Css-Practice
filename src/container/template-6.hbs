<header class="header ">
	<a href="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="main_info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>


<div class="updates">
	{{#with updates}}
	<h2 class="updates_title">{{title}}</h2>
	{{#each list}}
	<div class="updImg_list">
		<div class="updates_img">32x32</div>
		<div class="updates_list">
			<strong class="list_name">@{{nickname}}</strong>
			<p class="list_text">{{description}}</p>
		</div>
	</div>
	{{/each}}
	<a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<h2 class="expirience_title">{{title}}</h2>
	<badge class="exp_badge">{{badge}}</badge>
	<div class="expirience_list">
		{{#each list}}
		<div class="exp_card">
			<strong class="exp_name">{{name}}</strong>
			<p class="exp_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>



<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<div class="footer_title">{{title}}</div>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>